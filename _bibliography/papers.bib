	month = may,
	year = {2020},
	publisher = {Frontiers},
	keywords = {16S amplicon sequencing, Animal feedstuff, Circular economy, microbial communities, Waste valorization, AGIV, Actinomyces, Larval metabolism},
	pages = {993},
	altmetric = {82476957},
	preview = {frontiers_in_microbiology_2020.jpg},
	dimensions = true
}

@article{klammsteiner_suitability_2020,
    bibtex_show={true},
	title = {Suitability of black soldier fly frass as soil amendment and implication for organic waste hygienization},
