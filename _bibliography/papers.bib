	urldate = {2022-12-03},
	journal = {Journal of Insects as Food and Feed},
	author = {Heussler, Carina D. and Insam, Heribert and Walter, Andreas and Schlick-Steiner, Birgit C. and Steiner, Florian M. and Klammsteiner, Thomas},
	month = dec,
